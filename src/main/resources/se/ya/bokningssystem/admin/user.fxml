<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.ya.bokningssystem.frontend.admin.user.UserController">
   <children>
      <TableView fx:id="tw_user" prefHeight="378.0" prefWidth="522.0">
        <columns>
          <TableColumn fx:id="tc_first_name" prefWidth="115.0" text="Förnamn" />
          <TableColumn fx:id="tc_last_name" prefWidth="131.0" text="Efternamn" />
            <TableColumn fx:id="tc_email" prefWidth="130.0" text="E-mail" />
            <TableColumn fx:id="tc_state" prefWidth="145.0" text="Status" />
        </columns>
      </TableView>
      <HBox alignment="TOP_RIGHT" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" top="5.0" />
         </padding>
         <children>
            <Button id="opsBtn" fx:id="btn_get_user" mnemonicParsing="false" onAction="#get_user" text="Hämta" />
            <Button id="opsBtn" fx:id="btn_update_user" mnemonicParsing="false" onAction="#update_user" text="Update" />
            <Button id="opsBtn" fx:id="btn_delete_user" mnemonicParsing="false" onAction="#delete_user" text="Ta bort" />
         </children>
      </HBox>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <TextField fx:id="tf_first_name" promptText="förnamn" />
            <TextField fx:id="tf_last_name" promptText="efternamn" />
            <TextField fx:id="tf_email" promptText="e-mail" />
            <ChoiceBox fx:id="cb_state" prefHeight="25.0" prefWidth="382.0" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button id="opsBtn" fx:id="btn_add_user" mnemonicParsing="false" onAction="#add_user" text="Lägg till" />
                  <Button id="opsBtn" fx:id="btn_edit_user" mnemonicParsing="false" onAction="#edit_user" text="Redigera" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
