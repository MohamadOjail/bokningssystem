<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="793.0" prefWidth="562.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.ya.bokningssystem.frontend.admin.resource.ResourceController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <TabPane prefHeight="788.0" prefWidth="608.0" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab closable="false" text="Lägg till">
               <content>
                  <AnchorPane prefHeight="731.0" prefWidth="570.0">
                     <children>
                        <TableView fx:id="tw_resource" prefHeight="378.0" prefWidth="522.0">
                          <columns>
                            <TableColumn fx:id="tc_resource_name" prefWidth="185.0" text="Resursnamn" />
                              <TableColumn fx:id="tc_art_number" prefWidth="163.0" text="Artikelnummer" />
                              <TableColumn fx:id="tc_status" prefWidth="167.0" text="Status" />
                          </columns>
                        </TableView>
                        <Button fx:id="btn_add_resource" layoutX="395.0" layoutY="378.0" mnemonicParsing="false" onAction="#add_resource" text="Lägg till" />
                        <Button fx:id="btn_edit_resource" layoutX="14.0" layoutY="485.0" mnemonicParsing="false" onMouseClicked="#edit_resource" text="Redigera" />
                        <Button fx:id="btn_update_resource" layoutX="461.0" layoutY="378.0" mnemonicParsing="false" onMouseClicked="#update_resource" text="Update" />
                        <Button fx:id="btn_delete_resource" layoutX="461.0" layoutY="406.0" mnemonicParsing="false" onMouseClicked="#delete_resource" text="Ta bort" />
                        <TextField fx:id="tf_resource_name" layoutX="7.0" layoutY="378.0" promptText="resursnamn" />
                        <TextField fx:id="tf_art_number" layoutX="7.0" layoutY="418.0" promptText="artikelnummer" />
                        <ChoiceBox fx:id="cb_status" layoutX="7.0" layoutY="453.0" prefWidth="150.0" />
                        <Button fx:id="btn_get_resource" layoutX="290.0" layoutY="378.0" mnemonicParsing="false" onAction="#get_resource" text="Hämta resurser" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</VBox>
