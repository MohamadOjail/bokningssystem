<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.ya.bokningssystem.frontend.admin.resource.ResourceController">
   <children>
      <TableView fx:id="tw_resource" prefHeight="378.0" prefWidth="522.0">
        <columns>
          <TableColumn fx:id="tc_resource_name" prefWidth="185.0" text="Resursnamn" />
            <TableColumn fx:id="tc_art_number" prefWidth="163.0" text="Artikelnummer" />
            <TableColumn fx:id="tc_status" prefWidth="167.0" text="Status" />
        </columns>
      </TableView>
      <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
         <children>
            <Button id="opsBtn" fx:id="btn_get_resource" mnemonicParsing="false" onAction="#get_resource" text="Hämta resurser" />
            <Button id="opsBtn" fx:id="btn_update_resource" mnemonicParsing="false" onMouseClicked="#update_resource" text="Update" />
            <Button id="opsBtn" fx:id="btn_delete_resource" mnemonicParsing="false" onMouseClicked="#delete_resource" text="Ta bort" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" top="5.0" />
         </padding>
      </HBox>
      <VBox id="container" spacing="10.0">
         <children>
            <TextField fx:id="tf_resource_name" promptText="resursnamn" />
            <TextField fx:id="tf_art_number" promptText="artikelnummer" />
            <ChoiceBox fx:id="cb_status" prefHeight="25.0" prefWidth="300.0" />
            <HBox spacing="10.0">
               <children>
                  <Button id="opsBtn" fx:id="btn_add_resource" mnemonicParsing="false" onAction="#add_resource" text="Lägg till" />
                  <Button id="opsBtn" fx:id="btn_edit_resource" mnemonicParsing="false" onMouseClicked="#edit_resource" text="Redigera" />
               </children>
               <padding>
                  <Insets bottom="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
