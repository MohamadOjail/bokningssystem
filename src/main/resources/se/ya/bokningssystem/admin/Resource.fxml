<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.ya.bokningssystem.frontend.admin.resource.ResourceController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <TabPane tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab closable="false" text="Redigera">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                     </padding>
                     <children>
                        <VBox>
                           <children>
                              <Label text="Hitta resurs" />
                              <TextField fx:id="tf_find_resource" />
                              <ListView fx:id="lv_resourcelist" prefHeight="200.0" prefWidth="200.0">
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </ListView>
                           </children>
                           <padding>
                              <Insets left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                        <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
                           <children>
                              <Button id="opsBtn" fx:id="btn_edit_resource" mnemonicParsing="false" onMouseClicked="#edit_resource" text="Redigera" />
                              <Button id="opsBtn" fx:id="btn_delete_resource" layoutX="409.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#delete_resource" text="Radera" />
                           </children>
                           <padding>
                              <Insets right="20.0" />
                           </padding>
                        </HBox>
                        <VBox spacing="20.0">
                           <children>
                              <VBox>
                                 <children>
                                    <Label text="Beskrivning:" />
                                    <TextField fx:id="tf_description_resource" />
                                 </children>
                              </VBox>
                              <VBox layoutX="10.0" layoutY="10.0">
                                 <children>
                                    <Label text="Status" />
                                    <ChoiceBox prefWidth="150.0" />
                                 </children>
                              </VBox>
                              <VBox layoutX="10.0" layoutY="73.0">
                                 <children>
                                    <Label text="Tillgämglighetsdatum" />
                                    <DatePicker />
                                 </children>
                              </VBox>
                              <HBox alignment="BOTTOM_RIGHT">
                                 <children>
                                    <Button id="opsBtn" fx:id="btn_update_resource" mnemonicParsing="false" onMouseClicked="#update_resource" text="Uppdatera" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab closable="false" text="Lägg till">
               <content>
                  <VBox spacing="20.0">
                     <children>
                        <VBox>
                           <children>
                              <Label text="Beskrivning:" />
                              <TextField fx:id="tf_description" />
                           </children>
                        </VBox>
                        <VBox layoutX="10.0" layoutY="10.0">
                           <children>
                              <Label text="Status" />
                              <ChoiceBox prefWidth="150.0" />
                           </children>
                        </VBox>
                        <VBox layoutX="10.0" layoutY="73.0" prefHeight="33.0" prefWidth="280.0">
                           <children>
                              <Label text="Artikelnummer" />
                              <TextField fx:id="tf_artnr" />
                           </children>
                        </VBox>
                        <HBox alignment="BOTTOM_RIGHT">
                           <children>
                              <Button id="opsBtn" fx:id="btn_add_resource" mnemonicParsing="false" onMouseClicked="#addResource" text="Lägg till" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</VBox>
